<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtSisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Panjang Sisi" />

    <EditText
        android:id="@+id/editSisi"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSisi"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="410dp"
        android:inputType="number" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editSisi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-375dp"
        android:background="#F01111"
        android:text="Oke" />

    <TextView
        android:id="@+id/txtLuas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOk"
        android:layout_alignParentStart="true"
        android:text="Luas Persegi" />

    <EditText
        android:id="@+id/editHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLuas"
        android:layout_alignEnd="@+id/editSisi"
        android:layout_alignParentStart="true"
        android:inputType="number" />

    <TextView
        android:id="@+id/txtKeliling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editHasil"
        android:layout_alignParentStart="true"
        android:text="Keliling Persegi" />

    <EditText
        android:id="@+id/editKeliling"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtKeliling"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:inputType="number" />
</RelativeLayout>